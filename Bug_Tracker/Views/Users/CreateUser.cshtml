@model Users
<h2>Create Account</h2>
@using (Html.BeginForm("InsertUserToDatabase", "Users", "Post"))
{
    <label asp-for="ID" class="control-label">ID</label>
    <input type="number" name="ID" class="form-control" value="" />

    <label asp-for="UserName" class="control-label">User Name</label>
    <input type="text" name="UserName" class="form-control" value="" />
    <label asp-for="Password" class="control-label">Password</label>
    <input type="password" name="Password" class="form-control" />

    <input type="submit" value="Create User" class="btn btn-primary" />
}