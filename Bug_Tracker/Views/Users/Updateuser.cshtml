@model Users
<h2>Update Account @Model.UserName</h2>
@using (Html.BeginForm("UpdateUserToDatabase", "Users", "Post"))
{

    <input asp-for="ID" type="hidden" value="@Model.ID" />

    <label asp-for="UserName" class="control-label">User Name</label>

    <input type="text" name="UserName" class="form-control" value="@Model.UserName" />

    <label asp-for="Password" class="control-label">Password</label>

    <input type="password" name="Password" class="form-control" value="@Model.Password" />

    <input type="submit" value="Update User" class="btn btn-primary" />
}